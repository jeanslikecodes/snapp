<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.ctp.projetofinalsnapp.InsertActivity">

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginTop="40dp"
            android:text="Digite tipo e marca do produto:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Ex.: Shoulder Schutt Varsity 3.0 Flex"
            android:ems="10"
            android:id="@+id/idProdutoInsert"
            android:textStyle="normal|italic" />

        <TextView
            android:layout_marginTop="40dp"
            android:text="Digite o tamanho do produto:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <EditText
            android:hint="Ex.: XS/S/M/L/XL"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idTamanhoInsert"
            android:textStyle="normal|italic" />

        <TextView
            android:layout_marginTop="40dp"
            android:text="Digite o preÃ§o do produto:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="Ex.: 1.350,00"
            android:id="@+id/idPrecoInsert"
            android:textStyle="normal|italic" />

        <Button
            android:onClick="cadastrarProduto"
            android:layout_marginTop="40dp"
            android:text="Cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCadastrarInsert"
            android:textStyle="normal|bold"
            android:textSize="17dp" />

    </LinearLayout>

</RelativeLayout>
