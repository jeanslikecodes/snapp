<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#746564"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ctp.projetofinalsnapp.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:srcCompat="@drawable/logosnapp"
            android:id="@+id/logoLogin" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Digite o username:"
            android:textColorHint="#fff"
            android:ems="10"
            android:id="@+id/txtUserLogin"
            android:textColor="#fff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Digite a senha:"
            android:textColorHint="#fff"
            android:id="@+id/txtSenhaLogin"
            android:layout_marginTop="20sp"
            android:textColor="#fff" />

        <Button
            android:text="Entrar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btnEntrar"
            android:layout_marginTop="170dp"
            android:onClick="verificacaoUsuario"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:text="NÃ£o tem conta? Registre-se"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblRegister"
            android:layout_marginTop="5sp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:onClick="registrarConta"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</RelativeLayout>
